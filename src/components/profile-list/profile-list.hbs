<div class="profile-list">
    <div class="profile-list__img">
        <img src="../assets/img/profile.png" alt="profile">
        <span>Поменять аватар</span>
    </div>
    {{#if name}}
    <p class="profile-list__title">Иван</p>
    {{/if}}
    <ul class="profile-list__list">
        {{#if password}}
            <li class="profile-list__item">
                <p class="profile-list__subtitle">Старый пароль</p>
                <input class="profile-list__value" type="password" name="oldPassword" value="123456"></input>
            </li>
            <li class="profile-list__item">
                <p class="profile-list__subtitle">Новый пароль</p>
                <input class="profile-list__value" type="password" name="newPassword" value="123456"></input>
            </li>
            <li class="profile-list__item">
                <p class="profile-list__subtitle">Повторите новый пароль</p>
                <input class="profile-list__value" type="password" name="newPassword_repeat" value="123456"></input>
            </li>
        {{else}}
        <li class="profile-list__item">
            <p class="profile-list__subtitle">Почта</p>
            <input class="profile-list__value {{#if noChange}}{{noChange}}{{/if}}" type="email" name="email" value="pochta@yandex.ru"></input>
        </li>
        <li class="profile-list__item">
            <p class="profile-list__subtitle">Логин</p>
            <input class="profile-list__value {{#if noChange}}{{noChange}}{{/if}}" type="text" name="login" value="ivanivanov"></input>
        </li>
        <li class="profile-list__item">
            <p class="profile-list__subtitle">Имя</p>
            <input class="profile-list__value {{#if noChange}}{{noChange}}{{/if}}" type="text" name="name" value="Иван"></input>
        </li>
        <li class="profile-list__item">
            <p class="profile-list__subtitle">Фамилия</p>
            <input class="profile-list__value {{#if noChange}}{{noChange}}{{/if}}" type="text" name="second_name" value="Иванов"></input>
        </li>
        <li class="profile-list__item">
            <p class="profile-list__subtitle">Имя в чате</p>
            <input class="profile-list__value {{#if noChange}}{{noChange}}{{/if}}" type="text" name="display_name" value="Иван"></input>
        </li>
        <li class="profile-list__item">
            <p class="profile-list__subtitle">Телефон</p>
            <input class="profile-list__value {{#if noChange}}{{noChange}}{{/if}}" type="tel" name="phone" value="+7 (909) 967 30 30"></input>
        </li>
        {{/if}}
    </ul>
</div>
